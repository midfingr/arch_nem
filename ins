#Pacman Settings
sudo pacman -S haveged
sudo haveged -w 1024
sudo pacman-key --init && sudo pacman-key --populate archlinux
sudo pkill haveged

#Nemesis Sys Packages

sudo pacman -S i3 dmenu xdg-user-dirs leafpad lxappearance lxdm polkit-gnome gnome-keyring networkmanager network-manager-applet compton oblogout volumeicon ncmpcpp mpd w3m rxvt-unicode

#File Manager
sudo pacman -S thunar thunar-volman thunar-archive-plugin gvfs

#Archive
sudo pacman -S zip unzip p7zip unrar xarchiver

#Media
sudo pacman -S mplayer
sudo pacman -S nitrogen
sudo pacman -S imagemagick

#Browser
sudo pacman -S chromium

#AUR
chmod +x arch_nem/aur_ins
arch_nem/aur_ins

#Settings

mkdir .ncmpcpp
cp arch_nem/.ncmpcpp/config $HOME/.ncmpcpp/config
sudo gpasswd -a mpd users
chmod 710 $HOME
sudo systemctl enable mpd.service
sudo cp arch_nem/mpd.conf /etc/mpd.conf
sudo systemctl enable NetworkManager
sudo systemctl enable lxdm
